# Wallet configuration
WALLET_PATH=./wallet.json
TARGET_WALLET_ADDRESS=your_target_wallet_address_here

# Token Configuration
# TARGET_TOKEN: The token you want to maintain balance for (default: ARIO)
TARGET_TOKEN_PROCESS_ID=qNvAoz0TgcH7DMg8BCVn8jF32QH5L6T29VjHxhHqqGE
TARGET_TOKEN_SYMBOL=ARIO
TARGET_TOKEN_DECIMALS=6

# SOURCE_TOKEN: The token you swap from (default: wUSDC)
SOURCE_TOKEN_PROCESS_ID=7zH9dlMNoxprab9loshv3Y7WG45DOny_Vrq9KrXObdQ
SOURCE_TOKEN_SYMBOL=wUSDC
SOURCE_TOKEN_DECIMALS=6

# DEX Configuration (default: Permaswap ARIO/wUSDC pool)
PERMASWAP_POOL_ID=V7yzKBtzmY_MacDF-czrb1RY06xfidcGVrOjnhthMWM

# Legacy process IDs (kept for backwards compatibility)
ARIO_PROCESS_ID=qNvAoz0TgcH7DMg8BCVn8jF32QH5L6T29VjHxhHqqGE
WUSDC_PROCESS_ID=7zH9dlMNoxprab9loshv3Y7WG45DOny_Vrq9KrXObdQ

# Balance configuration (in target token units, not smallest units)
# MIN_BALANCE: Trigger top-up when balance falls below this threshold
# TARGET_BALANCE: Top up to this amount
MIN_BALANCE=400000
TARGET_BALANCE=400000

# Maximum allowed slippage percentage (default: 20%)
# The bot will abort swaps if slippage exceeds this threshold
MAX_SLIPPAGE=20

# Minimum transfer amount in target token (default: 500)
# The bot will skip transfers smaller than this to avoid tiny transactions
MIN_TRANSFER_AMOUNT=500

# Cron schedule (default: every 6 hours)
# Format: second minute hour dayOfMonth month dayOfWeek
# Examples:
# - "0 */6 * * *" = every 6 hours
# - "0 0 * * *" = daily at midnight
# - "0 0,12 * * *" = twice daily at midnight and noon
CRON_SCHEDULE=0 */6 * * *

# Dry run mode (set to true to simulate without executing trades)
DRY_RUN=false

# Notification Configuration

# Slack Configuration (optional)
# To enable Slack notifications:
# 1. Create a Slack app and bot user
# 2. Add the bot to your desired channel
# 3. Set the bot token and channel name below
# Leave SLACK_TOKEN empty to disable Slack notifications
SLACK_ENABLED=false
SLACK_TOKEN=xoxb-your-slack-bot-token-here
SLACK_CHANNEL=#your-channel-name

# Twitter Configuration (optional - future feature)
# TWITTER_ENABLED=false
